python3 network.py train \
    --epoch 10 \
    --batch-size 3 \
    --learning-rate 0.001 \
    --max-disp 192 \
    --save ~/data/models/sceneflow-1-1 \
    --dataset sceneflow \
    --root ~/data/datasets/ \
    --split 0.0 \
    --log-file ~/data/logs/sceneflow-1-1.log \
    --iters-per-log 100

python3 network.py train \
    --epoch 2 \
    --batch-size 3 \
    --learning-rate 0.0005 \
    --max-disp 192 \
    --save ~/data/models/sceneflow-1-2 \
