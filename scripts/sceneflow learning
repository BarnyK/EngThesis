## NO SDEA ACCUMULATED GRADIENT
python3 network.py train \
    --epochs 1 \
    --batch-size 3 \
    --iters-to-accumulate 4 \
    --learning-rate 0.001 \
    --max-disp 192 \
    --save ~/data/models/nosdea-monkaa-1-1 \
    --dataset monkaa \
    --root ~/data/datasets/monkaa__frames_cleanpass_webp \
    --disparity-root ~/data/datasets/monkaa__disparity \
    --split 0.2 \
    --log-file ~/data/logs/nosdea-monkaa-1-1.log \
    --iters-per-log 25 \
    --nosdea

